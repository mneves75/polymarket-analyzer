{
	"name": "polymarket-tui-demo",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"bin": {
		"pm-demo": "./src/index.ts"
	},
	"scripts": {
		"dev": "bun --bun run src/index.ts --tui",
		"dev:opentui": "OPENTUI=1 bun --bun run src/index.ts --tui",
		"snapshot": "bun --bun run src/index.ts --once",
		"tui": "bun --bun run src/index.ts --tui",
		"markets": "bun --bun run src/index.ts --list-markets",
		"test": "bun test",
		"typecheck": "bun --bun tsc"
	},
	"dependencies": {
		"@opentui/core": "^0.1.69",
		"blessed": "^0.1.81",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/blessed": "^0.1.25",
		"bun-types": "^1.3.5",
		"fast-check": "^4.5.3",
		"typescript": "^5.6.3"
	}
}
